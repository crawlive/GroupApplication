                  <Insets left="12.0" right="10.0" top="17.0" />
               </HBox.margin>
            </Label>
            <Button fx:id="red" mnemonicParsing="false" onAction="#clickedRed" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: e40d0d;">
